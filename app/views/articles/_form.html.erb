<%= render "shared/errors",obj:@article %>

<%= form_for(@article, :html=>{class:"form-horizontal",role:"form"}) do |a|%>

<div class="form-group col-sm-8">
    <%= a.label :title %>    
    <%= a.text_field :title,class:"form-control", placeholder:"Enter Title" ,autofocus:true%>

  </div>

   <div class="form-group col-sm-8">
    <%= a.label :description %> 
    <%= a.text_area :description , class:"form-control" ,placeholder:"Enter Description", rows:6 %>
  </div>
<div class="form-group col-sm-8">
<%= a.submit class:"btn btn-primary btn-lg" %>
</div>
<%end %>	

<%= link_to 'Back to show all',articles_path %>