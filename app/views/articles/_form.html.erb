<% if @article.errors.any? %>
<h2>Something went Wrong <br> Issue are following</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>

	<li><%= msg %></li>

<% end %>
</ul>
<% end %>

<%= form_for @article do |a|%>
<p>
	<%= a.label :title %>    
	<%= a.text_field :title %>
</p>

<p>
	<%= a.label :description %>    
	<%= a.text_area :description %>
</p>

<p><%= a.submit %></p>
<%end %>	

<%= link_to 'Back to show all',articles_path %>