<h2 align="center"> Listing all articles here</h2>

 <% @articles.each do |a| %>
 <div class="row">
 	<div class="col-sm-8 col-sm-offset-2">
 		<div class="card card-body bg-light">
 			<div class="article-title">
 				<%= link_to a.title,article_path(a) %>
 			</div>
 			<div class="article-body">
 				<%= truncate(a.description,length:100) %>
 			</div>

 			    <div class="article_actions">
	               <%= link_to 'Delete', article_path(a), method: :delete, data:{confirm:"Are you sure?"}, class: "btn btn-xs btn-danger" %>
	               <%= link_to 'Edit',edit_article_path(a) , class: "btn btn-xs btn-primary"%> 
                </div>
 		</div>
 	</div>
 </div>
    
<% end %>

</table>
